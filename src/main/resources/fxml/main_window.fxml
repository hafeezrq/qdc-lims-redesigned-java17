<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.qdc.lims.ui.controller.MainWindowController"
            fx:id="mainContainer"
            prefWidth="1100" prefHeight="750">
    
    <!-- Top: Menu Bar with Login Options -->
    <top>
        <VBox>
            <!-- Application Header -->
            <HBox style="-fx-background-color: linear-gradient(to right, #2c3e50, #3498db); -fx-padding: 8 15;" 
                  spacing="15" alignment="CENTER_LEFT">
                <Label fx:id="appHeaderLabel" text="ðŸ§ª LIMS" style="-fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: default;">
                    <font><Font size="18"/></font>
                </Label>
                <Region HBox.hgrow="ALWAYS" style="-fx-cursor: default;"/>
                
                <!-- Active Session Role + Quick Login Buttons -->
                <Label fx:id="activeRoleLabel" text="Active: None" style="-fx-text-fill: rgba(255,255,255,0.8); -fx-cursor: default;">
                    <font><Font size="12"/></font>
                </Label>
                <Button fx:id="receptionLoginBtn" text="ðŸ¥ Reception" onAction="#openReceptionLogin"
                        style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 11; -fx-padding: 5 12; -fx-background-radius: 4; -fx-cursor: hand;"/>
                <Button fx:id="labLoginBtn" text="ðŸ”¬ Lab" onAction="#openLabLogin"
                        style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-font-size: 11; -fx-padding: 5 12; -fx-background-radius: 4; -fx-cursor: hand;"/>
                <Button fx:id="adminLoginBtn" text="âš™ï¸ Admin" onAction="#openAdminLogin"
                        style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 11; -fx-padding: 5 12; -fx-background-radius: 4; -fx-cursor: hand;"/>
                
                <Separator orientation="VERTICAL" style="-fx-background-color: rgba(255,255,255,0.3); -fx-cursor: default;"/>
                
                <Button fx:id="exitBtn" text="Exit" onAction="#exitApplication"
                        style="-fx-background-color: rgba(255,255,255,0.15); -fx-text-fill: white; -fx-font-size: 11; -fx-padding: 5 12; -fx-background-radius: 4; -fx-cursor: hand;"/>
            </HBox>
            
            <!-- Tab Bar for Sessions -->
            <TabPane fx:id="sessionTabs" tabClosingPolicy="ALL_TABS" 
                     style="-fx-background-color: #ecf0f1;">
                <!-- Tabs will be added dynamically -->
            </TabPane>
        </VBox>
    </top>
    
    <!-- Center: Welcome Screen (shown when no tabs are open) -->
    <center>
        <VBox fx:id="welcomePane" alignment="CENTER" spacing="25" 
              style="-fx-background-color: linear-gradient(to bottom, #f8f9fa, #e9ecef); -fx-cursor: default;">
            <padding>
                <Insets top="60" right="60" bottom="60" left="60"/>
            </padding>
            
            <!-- Logo -->
            <StackPane>
                <ImageView fx:id="welcomeLogoImage" fitWidth="96" fitHeight="96" preserveRatio="true" smooth="true" pickOnBounds="true"/>
                <Label fx:id="welcomeLogoEmoji" text="ðŸ§ª" visible="false" managed="false" style="-fx-font-size: 72; -fx-cursor: default;"/>
            </StackPane>
            
            <!-- Title -->
            <VBox alignment="CENTER" spacing="8" style="-fx-cursor: default;">
                <Label fx:id="welcomeTitleLabel" text="LIMS" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50; -fx-cursor: default;">
                    <font><Font size="42"/></font>
                </Label>
                <Label fx:id="welcomeSubtitleLabel" text="Laboratory Information Management System" 
                       style="-fx-text-fill: #7f8c8d; -fx-font-style: italic; -fx-cursor: default;">
                    <font><Font size="14"/></font>
                </Label>
            </VBox>
            
            <!-- Instructions -->
            <VBox alignment="CENTER" spacing="15" style="-fx-padding: 30 0 0 0; -fx-cursor: default;">
                <Label text="Select a role from the menu bar above or the cards below to start a new session" 
                       style="-fx-text-fill: #95a5a6; -fx-cursor: default;">
                    <font><Font size="14"/></font>
                </Label>
                
                <!-- Quick Start Cards -->
                <HBox alignment="CENTER" spacing="20" style="-fx-padding: 20 0 0 0; -fx-cursor: default;">
                    <!-- Reception Card -->
                    <VBox alignment="CENTER" spacing="8" 
                          style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2); -fx-cursor: hand;"
                          onMouseClicked="#openReceptionLogin" prefWidth="180">
                        <Label text="ðŸ¥" style="-fx-font-size: 32;"/>
                        <Label text="Reception" style="-fx-font-weight: bold; -fx-text-fill: #27ae60;">
                            <font><Font size="16"/></font>
                        </Label>
                        <Label text="Patient registration&#10;&amp; billing" 
                               style="-fx-text-fill: #7f8c8d; -fx-text-alignment: center;" textAlignment="CENTER" wrapText="true">
                            <font><Font size="11"/></font>
                        </Label>
                    </VBox>
                    
                    <!-- Lab Card -->
                    <VBox alignment="CENTER" spacing="8" 
                          style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2); -fx-cursor: hand;"
                          onMouseClicked="#openLabLogin" prefWidth="180">
                        <Label text="ðŸ”¬" style="-fx-font-size: 32;"/>
                        <Label text="Laboratory" style="-fx-font-weight: bold; -fx-text-fill: #9b59b6;">
                            <font><Font size="16"/></font>
                        </Label>
                        <Label text="Test processing&#10;&amp; results" 
                               style="-fx-text-fill: #7f8c8d; -fx-text-alignment: center;" textAlignment="CENTER" wrapText="true">
                            <font><Font size="11"/></font>
                        </Label>
                    </VBox>
                    
                    <!-- Admin Card -->
                    <VBox alignment="CENTER" spacing="8" 
                          style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2); -fx-cursor: hand;"
                          onMouseClicked="#openAdminLogin" prefWidth="180">
                        <Label text="âš™ï¸" style="-fx-font-size: 32;"/>
                        <Label text="Administrator" style="-fx-font-weight: bold; -fx-text-fill: #e74c3c;">
                            <font><Font size="16"/></font>
                        </Label>
                        <Label text="System management&#10;&amp; reports" 
                               style="-fx-text-fill: #7f8c8d; -fx-text-alignment: center;" textAlignment="CENTER" wrapText="true">
                            <font><Font size="11"/></font>
                        </Label>
                    </VBox>
                </HBox>
            </VBox>
        </VBox>
    </center>
    
    <!-- Bottom: Status Bar -->
    <bottom>
        <HBox style="-fx-background-color: #34495e; -fx-padding: 5 15; -fx-cursor: default;" spacing="15" alignment="CENTER_LEFT">
            <Label fx:id="statusLabel" text="Ready" style="-fx-text-fill: rgba(255,255,255,0.8); -fx-cursor: default;">
                <font><Font size="11"/></font>
            </Label>
            <Region HBox.hgrow="ALWAYS" style="-fx-cursor: default;"/>
            <Label fx:id="sessionCountLabel" text="No active sessions" style="-fx-text-fill: rgba(255,255,255,0.6); -fx-cursor: default;">
                <font><Font size="11"/></font>
            </Label>
            <Label fx:id="footerBrandLabel" text="Â© 2024" style="-fx-text-fill: rgba(255,255,255,0.4); -fx-cursor: default;">
                <font><Font size="10"/></font>
            </Label>
        </HBox>
    </bottom>
</BorderPane>
