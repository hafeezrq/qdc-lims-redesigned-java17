<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.qdc.lims.ui.controller.PaymentHistoryController"
            prefHeight="700.0" prefWidth="1000.0" style="-fx-background-color: #f5f6fa;">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-background-color: #2c3e50; -fx-padding: 15 20;">
            <Label text="Payment History &amp; Financial Log" textFill="WHITE">
                <font>
                    <Font name="System Bold" size="20.0" />
                </font>
            </Label>
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="closeButton" text="Close" onAction="#handleClose" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" />
        </HBox>
    </top>

    <center>
        <VBox spacing="20.0">
            <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
            
            <!-- Filter Bar -->
            <HBox spacing="15" alignment="CENTER_LEFT" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 5; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 5, 0, 0, 2);">
                <VBox spacing="5">
                    <Label text="Start Date:"/>
                    <DatePicker fx:id="startDatePicker" prefWidth="150"/>
                </VBox>
                
                <VBox spacing="5">
                    <Label text="End Date:"/>
                    <DatePicker fx:id="endDatePicker" prefWidth="150"/>
                </VBox>
                
                <VBox spacing="5">
                    <Label text="Transaction Type:"/>
                    <ComboBox fx:id="typeFilter" prefWidth="150" promptText="All Transactions"/>
                </VBox>
                
                <Button text="Search Records" onAction="#handleSearch" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-pref-height: 35; -fx-translate-y: 10;"/>
                <Button text="Export CSV" onAction="#handleExport" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-pref-height: 35; -fx-translate-y: 10;"/>
                
                <Region HBox.hgrow="ALWAYS" />
                <Button fx:id="closeButton" text="Close" onAction="#handleClose" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-pref-height: 35; -fx-translate-y: 10;"/>

            </HBox>
            
            <!-- Summary Statistic Cards -->
            <HBox spacing="20">
                <VBox style="-fx-background-color: #27ae60; -fx-padding: 15; -fx-background-radius: 5; -fx-pref-width: 200;">
                     <Label text="Total Income" textFill="WHITE" style="-fx-font-size: 14;"/>
                     <Label fx:id="totalIncomeLabel" text="0.00" textFill="WHITE" style="-fx-font-size: 24; -fx-font-weight: bold;"/>
                </VBox>
                
                <VBox style="-fx-background-color: #c0392b; -fx-padding: 15; -fx-background-radius: 5; -fx-pref-width: 200;">
                     <Label text="Total Expenses" textFill="WHITE" style="-fx-font-size: 14;"/>
                     <Label fx:id="totalExpenseLabel" text="0.00" textFill="WHITE" style="-fx-font-size: 24; -fx-font-weight: bold;"/>
                </VBox>
                
                <VBox style="-fx-background-color: #f39c12; -fx-padding: 15; -fx-background-radius: 5; -fx-pref-width: 200;">
                     <Label text="Net Cash Flow" textFill="WHITE" style="-fx-font-size: 14;"/>
                     <Label fx:id="netCashFlowLabel" text="0.00" textFill="WHITE" style="-fx-font-size: 24; -fx-font-weight: bold;"/>
                </VBox>
            </HBox>

            <!-- Table -->
            <TableView fx:id="transactionTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="dateCol" text="Date" prefWidth="100"/>
                    <TableColumn fx:id="idCol" text="Reference ID" prefWidth="100"/>
                    <TableColumn fx:id="typeCol" text="Type" prefWidth="80"/>
                    <TableColumn fx:id="categoryCol" text="Category" prefWidth="150"/>
                    <TableColumn fx:id="descCol" text="Description" prefWidth="250"/>
                    <TableColumn fx:id="amountCol" text="Amount" prefWidth="100"/>
                    <TableColumn fx:id="statusCol" text="Status" prefWidth="80"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>
            
            <Label fx:id="recordCountLabel" text="0 records found" style="-fx-text-fill: #7f8c8d;"/>
        </VBox>
    </center>

</BorderPane>
