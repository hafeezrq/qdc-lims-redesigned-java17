<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.qdc.lims.ui.controller.ReferenceRangeController"
            prefHeight="500.0" prefWidth="700.0">
    
    <top>
        <VBox style="-fx-background-color: #34495e; -fx-padding: 15;" spacing="8">
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label text="Reference Ranges Management" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="18.0"/>
                    </font>
                </Label>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="Close" onAction="#handleClose" styleClass="admin-close-button"/>
            </HBox>
            <Label fx:id="testNameLabel" text="For Test: ..." textFill="#ecf0f1">
                <font>
                    <Font size="14.0"/>
                </font>
            </Label>
            <ComboBox fx:id="testCombo" prefWidth="350" promptText="Select a test to manage ranges"/>
        </VBox>
    </top>
    
    <center>
        <TableView fx:id="rangesTable">
            <columns>
                <TableColumn fx:id="genderColumn" text="Gender" prefWidth="100"/>
                <TableColumn fx:id="ageRangeColumn" text="Age Range" prefWidth="150"/>
                <TableColumn fx:id="normalRangeColumn" text="Normal Values" prefWidth="200"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
    </center>
    
    <right>
        <VBox spacing="15.0" style="-fx-background-color: #f5f5f5; -fx-padding: 15;">
            <Label text="Add / Edit Range">
                <font>
                    <Font name="System Bold" size="14.0"/>
                </font>
            </Label>
            
            <GridPane vgap="10" hgap="10">
                <Label text="Gender:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <ComboBox fx:id="genderCombo" prefWidth="150" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                
                <Label text="Age (Min):" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="minAgeField" promptText="Years" prefWidth="80" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                
                <Label text="Age (Max):" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="maxAgeField" promptText="Years" prefWidth="80" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                
                <Label text="Value (Min):" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <TextField fx:id="minValField" promptText="Lower Limit" prefWidth="80" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                
                <Label text="Value (Max):" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <TextField fx:id="maxValField" promptText="Upper Limit" prefWidth="80" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
            </GridPane>
            
            <VBox spacing="10">
                <Button fx:id="addButton" text="Add Range" onAction="#handleAdd" 
                        maxWidth="Infinity" style="-fx-background-color: #27ae60; -fx-text-fill: white;"/>
                        
                <Button fx:id="deleteButton" text="Delete Selected" onAction="#handleDelete" disable="true"
                        maxWidth="Infinity" style="-fx-background-color: #e74c3c; -fx-text-fill: white;"/>
            </VBox>
            
            <Region VBox.vgrow="ALWAYS"/>
        </VBox>
    </right>
    
</BorderPane>
