<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.qdc.lims.ui.controller.ResultEditAuditController"
            prefHeight="720.0" prefWidth="1220.0" style="-fx-background-color: #f5f6fa;">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-background-color: #2c3e50; -fx-padding: 15 20;">
            <Label text="Result Edit Audit">
                <font>
                    <Font name="System Bold" size="20.0" />
                </font>
                <style>-fx-text-fill: white;</style>
            </Label>
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="closeButton" text="Close" onAction="#handleClose"
                    style="-fx-background-color: #e74c3c; -fx-text-fill: white;" />
        </HBox>
    </top>

    <center>
        <VBox spacing="16.0">
            <padding>
                <Insets top="16" right="16" bottom="16" left="16"/>
            </padding>

            <HBox spacing="10" alignment="CENTER_LEFT"
                  style="-fx-background-color: white; -fx-padding: 12; -fx-background-radius: 5; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 5, 0, 0, 2);">
                <VBox spacing="4">
                    <Label text="From Date"/>
                    <DatePicker fx:id="fromDatePicker" prefWidth="130"/>
                </VBox>
                <VBox spacing="4">
                    <Label text="To Date"/>
                    <DatePicker fx:id="toDatePicker" prefWidth="130"/>
                </VBox>
                <VBox spacing="4">
                    <Label text="Order ID"/>
                    <TextField fx:id="orderIdField" promptText="e.g. 1024" prefWidth="120"/>
                </VBox>
                <VBox spacing="4">
                    <Label text="Edited By"/>
                    <TextField fx:id="editedByField" promptText="username" prefWidth="140"/>
                </VBox>
                <VBox spacing="4">
                    <Label text="Test Name"/>
                    <TextField fx:id="testNameField" promptText="test name" prefWidth="170"/>
                </VBox>
                <Button text="Search" onAction="#handleSearch"
                        style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-pref-height: 34; -fx-translate-y: 9;"/>
                <Button text="Reset" onAction="#handleReset"
                        style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-pref-height: 34; -fx-translate-y: 9;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label fx:id="recordCountLabel" text="0 record(s) found" style="-fx-text-fill: #7f8c8d;"/>
            </HBox>

            <TableView fx:id="auditTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="editedAtCol" text="Edited At" prefWidth="150"/>
                    <TableColumn fx:id="orderIdCol" text="Order ID" prefWidth="90"/>
                    <TableColumn fx:id="resultIdCol" text="Result ID" prefWidth="90"/>
                    <TableColumn fx:id="testNameCol" text="Test" prefWidth="170"/>
                    <TableColumn fx:id="editedByCol" text="Edited By" prefWidth="130"/>
                    <TableColumn fx:id="oldValueCol" text="Old Value" prefWidth="130"/>
                    <TableColumn fx:id="newValueCol" text="New Value" prefWidth="130"/>
                    <TableColumn fx:id="reasonCol" text="Reason" prefWidth="250"/>
                    <TableColumn fx:id="deliveredCol" text="Delivered?" prefWidth="90"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>
        </VBox>
    </center>
</BorderPane>
