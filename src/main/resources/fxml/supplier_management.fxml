<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.qdc.lims.ui.controller.SupplierManagementController"
      spacing="15" prefWidth="600" prefHeight="500" style="-fx-padding: 20;">
    
    <Label text="Supplier Management" style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
    <Separator/>
    
    <HBox spacing="15" VBox.vgrow="ALWAYS">
        <!-- List of Suppliers -->
        <VBox spacing="10" HBox.hgrow="ALWAYS">
            <ListView fx:id="supplierListView" VBox.vgrow="ALWAYS"/>
            <HBox spacing="10" alignment="CENTER_LEFT">
                 <Button text="Delete" onAction="#handleDelete" style="-fx-background-color: #e74c3c; -fx-text-fill: white;"/>
            </HBox>
        </VBox>
        
        <!-- Add/Edit Form -->
        <VBox spacing="10" style="-fx-background-color: #ecf0f1; -fx-padding: 15; -fx-background-radius: 5;" prefWidth="280">
            <Label text="Supplier Details" style="-fx-font-weight: bold;"/>
            
            <Label text="Company Name:"/>
            <TextField fx:id="companyNameField" promptText="Enter company name"/>
            
            <Label text="Contact Person:"/>
            <TextField fx:id="contactPersonField" promptText="Enter contact person"/>
            
            <Label text="Mobile:"/>
            <TextField fx:id="mobileField" promptText="Enter mobile number"/>
            
            <Label text="Address:"/>
            <TextArea fx:id="addressArea" prefRowCount="3" wrapText="true" promptText="Enter address"/>
            
            <Region VBox.vgrow="ALWAYS"/>
            
            <HBox spacing="10" alignment="CENTER_RIGHT">
                <Button text="Clear" onAction="#handleClear"/>
                <Button text="Save" onAction="#handleSave" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold;"/>
            </HBox>
        </VBox>
    </HBox>
    
    <Separator/>
    <HBox alignment="CENTER_RIGHT">
        <Button text="Close" onAction="#handleClose" style="-fx-background-color: #95a5a6; -fx-text-fill: white;" prefWidth="100"/>
    </HBox>
</VBox>
