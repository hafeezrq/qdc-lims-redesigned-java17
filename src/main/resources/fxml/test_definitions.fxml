<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.qdc.lims.ui.controller.TestDefinitionsController">
    <!-- Header -->
    <top>
        <VBox spacing="10" style="-fx-padding: 20;">
            <Label text="Test Definitions" style="-fx-font-size: 24; -fx-font-weight: bold;"/>
            <HBox spacing="10" alignment="CENTER_LEFT">
                <TextField fx:id="searchField" promptText="Search tests..." prefWidth="300"/>
                <Button text="Search" onAction="#handleSearch"/>
                <Button text="New Test" onAction="#handleNewTest" style="-fx-background-color: #007bff; -fx-text-fill: white;"/>
                <Button text="Refresh" onAction="#handleRefresh"/>
            </HBox>
        </VBox>
    </top>

    <!-- Content -->
    <center>
        <VBox style="-fx-padding: 0 20 20 20;">
            <TableView fx:id="testTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colTestName" text="Test Name" prefWidth="200">
                        <cellValueFactory><PropertyValueFactory property="testName"/></cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="colShortCode" text="Short Code" prefWidth="100">
                        <cellValueFactory><PropertyValueFactory property="shortCode"/></cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="colDepartment" text="Department" prefWidth="150">
                        <cellValueFactory><PropertyValueFactory property="department"/></cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="colPrice" text="Price" prefWidth="100">
                        <cellValueFactory><PropertyValueFactory property="price"/></cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="colActions" text="Actions" prefWidth="150"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 12 20 16 20;">
            <Label fx:id="statusLabel" text="Ready"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Close" onAction="#handleClose" style="-fx-background-color: #7f8c8d; -fx-text-fill: white;" prefWidth="100"/>
        </HBox>
    </bottom>
</BorderPane>
